{
    "name": "nmred/kafka-php",
    "description": "Kafka client for php",
    "type": "library",
    "keywords": [
        "Client",
        "Kafka"
    ],
    "homepage": "http://www.swanlinux.net",
    "license": "BSD-3-Clause",
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "^8.0",
        "amphp/amp": "^2",
        "lcobucci/clock": "^2.0",
        "psr/log": "^2.0 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "Kafka\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KafkaTest\\": "tests/",
            "KafkaExample\\": "example/"
        }
    },
    "suggest": {
        "ext-krb5": "To be able to ues the GSSAPI SASL mechanism"
    },
    "require-dev": {
        "doctrine/coding-standard": "^11",
        "infection/infection": "^0.26",
        "maxime-pasquier/monolog-stdout-handler": "^2.1",
        "mikey179/vfsstream": "^1.6.5",
        "monolog/monolog": "^2",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/phpcov": "^8.0",
        "phpunit/phpunit": "^9",
        "php-coveralls/php-coveralls": "^2",
        "slevomat/coding-standard": "^8.1",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --color --testsuite base",
        "lint": "./vendor/bin/phpcs --standard=PSR12 src tests"
    }
}
